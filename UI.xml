			<OnLoad function="LongMacroButton_paintGold"/>
			<OnClick>
				LongMacroButton_onClick(self, button, down);
			</OnClick>
			<OnDragStart function="LongMacroButton_onDragStart"/>
		</Scripts>
	</CheckButton>
